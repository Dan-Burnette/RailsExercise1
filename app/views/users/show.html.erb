<%= @user.email %>'s bikes

<% @bikes.each do |b|%>
	<ul>
		<li>Bike ID: <%=b.id %> Bike Color: <%= b.color%></li>
		<% if current_user.id == @user.id%>
			<%= link_to 'delete bike', user_bike_path(@user.id,b.id) , method: 'DELETE' %>
		<% end %>
	</ul>
<% end %>

<%if current_user.id == @user.id %>
	<%= form_tag(user_bikes_path(@user.id), method: 'POST') do %>
		<label>Enter the color of your new bike</label>
		<input type="text" name='bike[color]' value='<%=@bike.color%>'> 
		<input type="hidden" name='bike[user_id]' value='<%=@user.id%>'> 
		<input type="submit" value="submit">
	<%end%>
<% end %>
